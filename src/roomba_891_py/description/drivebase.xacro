<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="dimensions.xacro"/>
    <xacro:include filename="materials.xacro"/>
    
    <link name="chassis_link">
        <visual>
            <origin xyz="0.0 0.0 0.0375"/>
            <geometry>
                <cylinder radius="${chassis_radius}" length="${chassis_height}"/>
            </geometry>
            <material name="grey"/>
        </visual>
    </link>

    <link name="left_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
                <material name="red"/>
            </geometry>
        </visual>
    </link>

    <link name="right_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="${wheel_radius}" length="${wheel_thickness}"/>
                <material name="red"/>
            </geometry>
        </visual>
    </link>

    <link name="caster_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="${caster_radius}"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="caster_joint" type="continuous">
        <origin xyz="0.129 0.0 0.0" rpy="0.0 0.0 0.0"/>

        <parent link="chassis_link"/>
        <child link="caster_wheel"/>
    
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.0 ${wheel_offset} 0.0" rpy="${pi/2} 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0.0 -${wheel_offset} 0.0" rpy="${pi/2} 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>
</robot>